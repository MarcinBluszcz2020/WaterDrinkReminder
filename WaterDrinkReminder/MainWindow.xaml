        <TextBox  Name="NumberTextBox" PreviewTextInput="NumberValidationTextBox" HorizontalAlignment="Left" Margin="36,86,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Delay}"/>
